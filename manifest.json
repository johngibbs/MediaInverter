{
  "manifest_version": 3,
  "name": "Media Inverter",
  "version": "0.1.0",
  "description": "Invert colors of images and videos via context menu. Right-click directly on media or near media to toggle inversion.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}